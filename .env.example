# =============================================================================
# Mining AI Platform - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# --- Environment ---
ENVIRONMENT=development

# --- PostgreSQL ---
POSTGRES_USER=mining_user
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=mining_ai
DATABASE_URL=postgresql+asyncpg://mining_user:change_me_strong_password@localhost:5432/mining_ai
DATABASE_URL_SYNC=postgresql+psycopg2://mining_user:change_me_strong_password@localhost:5432/mining_ai

# --- Redis ---
REDIS_PASSWORD=change_me_redis_password
REDIS_URL=redis://:change_me_redis_password@localhost:6379/0
CELERY_BROKER_URL=redis://:change_me_redis_password@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:change_me_redis_password@localhost:6379/1

# --- ChromaDB ---
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_API_KEY=
CHROMA_COLLECTION_DOCUMENTS=mining_documents
CHROMA_COLLECTION_RESEARCH=mining_research

# --- Security ---
SECRET_KEY=change_me_to_a_256_bit_random_string_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- CORS ---
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- AI Providers ---
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-opus-4-6

# --- Embeddings ---
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# --- Document Processing ---
MAX_UPLOAD_SIZE_MB=50

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Mining AI
NEXT_PUBLIC_APP_VERSION=0.1.0

# --- Feature Flags ---
ENABLE_RESEARCH_AGENT=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_PROTOTYPE_GENERATOR=true
